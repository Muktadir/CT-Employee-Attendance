<h1>Listing allowed_ips</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ip address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @allowed_ips.each do |allowed_ip| %>
      <tr>
        <td><%= allowed_ip.name %></td>
        <td><%= allowed_ip.ip_address %></td>
        <td><%= link_to 'Show', allowed_ip %></td>
        <td><%= link_to 'Edit', edit_allowed_ip_path(allowed_ip) %></td>
        <td><%= link_to 'Destroy', allowed_ip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

